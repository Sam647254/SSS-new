<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:background="@drawable/background_activated"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name goes here"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_super_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Super name goes here" />

        <TextView
            android:id="@+id/activity_location_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location goes here" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/activity_days_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <include layout="@layout/weekday_letter_indicator" />

            <include layout="@layout/weekday_letter_indicator" />

            <include layout="@layout/weekday_letter_indicator" />

            <include layout="@layout/weekday_letter_indicator" />

            <include layout="@layout/weekday_letter_indicator" />

            <include layout="@layout/weekday_letter_indicator" />

            <include layout="@layout/weekday_letter_indicator" />
        </TableRow>
        
        <TextView 
            android:id="@+id/activity_date_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date goes here"/>

        <TextView
            android:id="@+id/activity_time_range_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time goes here" />
    </LinearLayout>

